/* gong/gong.wxss */

.onekit-iframe {
  border: 1px solid black;
  width: 100%;
}

.output {
  background: #eee;
}
.preference {
  display: flex;
  justify-content: space-between;
  width: 60%;
  margin: .5rem;
}
.onekit-div {
  width: 300px;
  height: 80px;
  background-color: lightgreen;
}
.onekit-u {
  text-decoration: red wavy underline;
}
/* artical */
.forecast {
  margin: 0;
  padding: .3rem;
  background-color: #eee;
  font: 1rem 'Fira Sans', sans-serif;
}

.forecast > onekit-h1,
.day-forecast {
  margin: .5rem;
  padding: .3rem;
  font-size: 1.2rem;
}

.day-forecast {
  background: right/contain content-box border-box no-repeat
  white;
}

.day-forecast > onekit-h2,
.day-forecast > onekit-p {
  margin: .2rem;
  font-size: 1rem;
}
